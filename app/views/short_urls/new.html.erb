<% provide(:title, 'Create Short Url') %>
<h1>Create your Short Url</h1>

<div class="row">
	<div class="span6 offset3">
	<%= form_for(@short_url) do |f| %>
	<%= render 'shared/error_messages' %>

		<%= f.label "Enter the long url. (e.g. http://www.google.com)" %>
		<%= f.text_field :lurl %>
		<%= f.label "Enter a vanity Url resource (optional)" %>
		<%= f.text_field :surl %>
		
		<%= f.submit "Create my Short Url!", class: "btn btn-large btn-primary" %>
    
	<% end %>
  </div>
</div>
